<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PersomPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Persom.model.Endereco</class>
    <class>Persom.model.Telefone</class>
    <class>Persom.model.Historicoproduto</class>
    <class>Persom.model.Orcamento</class>
    <class>Persom.model.Cliente</class>
    <class>Persom.model.Fornecedor</class>
    <class>Persom.model.Vendas</class>
    <class>Persom.model.Produto</class>
    <class>Persom.model.MovimentoEs</class>
    <class>Persom.model.Movimento</class>
    <class>Persom.model.Pagamento</class>
    <class>Persom.model.Login</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/persom?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
